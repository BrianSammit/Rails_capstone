<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Category</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= article.category.name %></td>
          <% if article.image.attached? %>
        <td><%= image_tag article.image, class: "image" %></td>
        <% end %>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>  <div class="caption" style="text-align:center;">

        <%= link_to like_article_path(article), class: "like", method: :put do %>
          <button type="button" class="btn btn-info" aria-label="left Align">
           <span><i class="far fa-thumbs-up"></i></span>
           <span><%= article.get_upvotes.size%></span>
          </button>
        <% end %>
    
        <%= link_to unlike_article_path(article), class: "like", method: :put do %>
          <button type="button" class="btn btn-info" aria-label="left Align">
           <span><i class="far fa-thumbs-down"></i></span>
           <span><%= article.get_downvotes.size%></span>
          </button>
        <% end %>
    
          </div>
        </td>  
      </tr>
    <% end %>
