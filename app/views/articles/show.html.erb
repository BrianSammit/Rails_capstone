<div class="container bg_color p-5 mb-5 mt-5">
 <h4 class="yellow_color mb-4 text-uppercase text-center"><%= @article.category.name %></h4>
  <div class="media ">
    <div class="media-body">
      <h5 class="yellow_color text-uppercase"><%= @article.title %></h5>
      <p class="text-white"><%= @article.body %></p>
    </div>
    <div  class="mt-4" >
       <%= image_tag(@article.image, class: 'image_in')%>
    </div>
  </div>
  
  <%= link_to like_article_path(@article), class: "like", method: :put do %>
    <button type="button" class="btn btn-warning" aria-label="left Align">
     <span><i class="far fa-thumbs-up"></i></span>
     <span><%= @article.get_upvotes.size%></span>
    </button>
  <% end %>
  <%= link_to unlike_article_path(@article), class: "like", method: :put do %>
    <button type="button" class="btn btn-warning" aria-label="left Align">
     <span><i class="far fa-thumbs-down"></i></span>
     <span><%= @article.get_downvotes.size%></span>
    </button>
  <% end %>
  <div class="mt-2">
    
  </div>

  <div class="d-flex justify-content-center">
    <div class="btn btn-outline-warning m-1">
      <%= link_to 'Edit', edit_article_path(@article), class: 'yellow_color' %>
    </div>
    <div class="btn btn-outline-warning m-1">
      <%= link_to 'Destroy', @article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'yellow_color' %>
    </div>
  
</div>